<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">

    <title>{{ metadata.title }}</title>

    <link rel="author" href="humans.txt" />

    <meta name="description" content="{{ intro if intro else metadata.description }}" />
    <meta itemprop="description" content="{{ intro if intro else metadata.description }}">

    <meta property="og:title" content="{{ metadata.title }}{% if title %} - {{ title }}{% endif %}" />

    <meta name="format-detection" content="telephone=no">
    <meta property="og:site_name" content="{{ metadata.title }}">
    <meta property="og:title" content="{{ metadata.title }}">
    <meta property="og:url" content="https://secondofmay.co.uk">
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="https://secondofmay.co.uk">
    <meta name="twitter:title" content="{{ metadata.title }}">
    <meta name="twitter:description" content="{{ metadata.description }}">
    <meta property="og:description" content="{{ metadata.description }}">
    <meta name="twitter:image" content="https://secondofmay.co.uk/assets/img/opengraph.jpg">
    <meta property="og:image" content="https://secondofmay.co.uk/assets/img/opengraph.jpg">
    <meta property="og:image:alt" content="{{ metadata.description }}">

    <link rel="shortcut icon" href="/assets/svg/jn.svg" type="image/svg" />

    {% if canonical %}
    <link rel="canonical" href="{{ canonical }}" />
    {% endif %}

    <link rel="stylesheet" media="screen" type="text/css" href="/assets/css/main.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Oswald:400&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="siteContainer">

      <header class="spine">
        <hgroup class="spine__text">
          <h1>James and Nat</h1>
          <h2>Second of May 2020</h2>
        </hgroup>

        <div class="spine__logo"></div>
      </header>

      <div class="nav">
        <a href="/">Home</a> |
        <a href="/updates">Updates</a> |
        <a href="/gift">Gifts</a> |
        <a href="/loop">Stay in the Loop</a>
      </div>

      <main class="centralContainer">
        {{ layoutContent | safe }}
      </main>
    </div>

    <script>
      if(window.navigator && navigator.serviceWorker) {
        navigator.serviceWorker.getRegistrations()
        .then(function(registrations) {
          for(let registration of registrations) {
            registration.unregister();
            console.log('Bye service worker');
          }
        });
      }
    </script>
  </body>
</html>
